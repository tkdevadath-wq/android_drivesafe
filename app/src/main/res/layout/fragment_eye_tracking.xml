<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0D17">

    <androidx.cardview.widget.CardView
        android:id="@+id/ai_card"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/camera_idle_border"
        app:cardBackgroundColor="#151724"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:id="@+id/statusCircleFrame"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/circular_neon_border"
        app:layout_constraintBottom_toTopOf="@id/statsContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ai_card">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:text="OFFLINE"
            android:textColor="#8E8E93"
            android:textSize="16sp" />
    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/statsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="#12FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/btnAction">

        <LinearLayout
            android:id="@+id/statsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    android:text="EYE ASPECT RATIO"
                    android:textColor="#8E8E93"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/eyeValueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-black"
                    android:text="0.00"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:background="#33FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    android:text="BLINK RATE"
                    android:textColor="#8E8E93"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/blinkRateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-black"
                    android:text="0/min"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAction"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#007AFF"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:text="START MONITORING"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        app:cornerRadius="32dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/emergencyOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF3B30"
        android:elevation="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Fullscreen camera overlay (PreviewView reparented here at runtime) -->
    <FrameLayout
        android:id="@+id/fullscreenOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:elevation="200dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnCloseFullscreen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#66000000"
            android:contentDescription="Close full-screen preview"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#FFFFFF" />

        <TextView
            android:id="@+id/tvFullscreenHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="48dp"
            android:background="#66000000"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="Adjust your phone &amp; camera position"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>