<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="20dp">

    <!-- Status: SAFE / OVER LIMIT -->
    <TextView
        android:id="@+id/speedStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAFE"
        android:textColor="#00FF99"
        android:textSize="18sp"
        android:textStyle="bold"
        android:letterSpacing="0.15"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Neon ring around speed -->
    <FrameLayout
        android:id="@+id/speedCircleFrame"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/circular_neon_border"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/speedStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <!-- Speed number -->
            <TextView
                android:id="@+id/speedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#00FF99"
                android:textSize="64sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />

            <!-- km/h label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km/h"
                android:textColor="#80FFFFFF"
                android:textSize="16sp"
                android:layout_marginTop="-8dp" />

        </LinearLayout>
    </FrameLayout>

    <!-- Speed Limit Label showing current value -->
    <TextView
        android:id="@+id/speedLimitLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed Limit: 80 km/h"
        android:textColor="#CCFFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/speedCircleFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- "Set your speed limit" hint -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drag to set your speed limit"
        android:textColor="#66FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/speedLimitLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Speed Limit Slider -->
    <com.google.android.material.slider.Slider
        android:id="@+id/speedSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="20"
        android:valueTo="240"
        android:stepSize="5"
        android:value="80"
        app:trackColorActive="#00FF99"
        app:trackColorInactive="#333333"
        app:thumbColor="#00FF99"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>